  ],
  fullContentTypes: [
    ".ts",".tsx",".js",".jsx",".yaml",".yml",".json",".webmanifest",
    ".css",".scss",".less",".md",".sh",".bash",".env",".env.example",
    "Dockerfile",".dockerignore",".yml"
  ],
  briefContentTypes: [
    ".svg",".png",".jpg",".jpeg",".gif",".webp",".ico",
    ".ttf",".woff",".woff2",".eot",".otf",
    ".mp3",".wav",".ogg",".mp4",".webm",
