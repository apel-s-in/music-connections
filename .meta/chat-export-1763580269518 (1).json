‚îú‚îÄ‚îÄ tailwind.config.js\n‚îî‚îÄ‚îÄ package.json\n```\n\n#===============================================================================\n# –ö–õ–Æ–ß–ï–í–´–ï –§–£–ù–ö–¶–ò–ò\n#===============================================================================\n\n## 1. –ê–î–ê–ü–¢–ò–í–ù–ê–Ø –í–†–ï–ú–ï–ù–ù–ê–Ø –®–ö–ê–õ–ê\n- –ì–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–∞—è –ª–∏–Ω–∏—è —Å —Ü–µ–Ω–æ–π –¥–µ–ª–µ–Ω–∏—è 1 –¥–µ–Ω—å\n- –î–∏–Ω–∞–º–∏—á–µ—Å–∫–∏–π –∑—É–º: –æ—Ç –≤–µ–∫–æ–≤ –¥–æ –¥–Ω–µ–π\n- –°–ª—É—á–∞–π–Ω—ã–µ –ø–µ—Ä—Å–æ–Ω—ã: 5 —Å–∫—Ä–∏–ø–∞—á–µ–π –≤ –Ω–∞—á–∞–ª—å–Ω–æ–º –ø–æ–ª–æ–∂–µ–Ω–∏–∏\n- –ê–¥–∞–ø—Ç–∏–≤–Ω—ã–π –¥–∏–∑–∞–π–Ω: —Ä–∞–∑–Ω—ã–µ –º–∞–∫–µ—Ç—ã –¥–ª—è –≤–µ—Ä—Ç–∏–∫–∞–ª—å–Ω–æ–π/–≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–æ–π –æ—Ä–∏–µ–Ω—Ç–∞—Ü–∏–∏\n- –§—É–Ω–∫—Ü–∏–∏ –∑—É–º–∞: –º–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞–Ω–∏–µ –∂–µ—Å—Ç–∞–º–∏ –∏ –∫–æ–ª–µ—Å–æ–º –º—ã—à–∏\n- –ü–æ–¥—Å–≤–µ—Ç–∫–∞ —Å–æ–±—ã—Ç–∏–π: —Å–≤—è–∑–∏ —Å –≤—ã–±—Ä–∞–Ω–Ω–æ–π –ø–µ—Ä—Å–æ–Ω–æ–π –ø–æ—è–≤–ª—è—é—Ç—Å—è –ø–æ–ª—É–ø—Ä–æ–∑—Ä–∞—á–Ω–æ\n\n### –†–µ–∞–ª–∏–∑–∞—Ü–∏—è –Ω–∞ TypeScript\n```typescript\n// components/timeline/Timeline.tsx\n'use client';\n\nimport { useRef, useEffect, useState } from 'react';\nimport * as d3 from 'd3';\nimport { useTranslations } from 'next-intl';\nimport { VectorIcon } from '../ui/VectorIcons';\nimport { EventShape } from '../ui/ShapeComponents';\n\nexport default function Timeline() {\n  const t = useTranslations('timeline');\n  const svgRef = useRef<SVGSVGElement>(null);\n  const containerRef = useRef<HTMLDivElement>(null);\n  const [viewBox, setViewBox] = useState({ x: 0, y: 0, width: 800, height: 150 });\n  const [isDragging, setIsDragging] = useState(false);\n  \n  useEffect(() => {\n    if (!svgRef.current || !containerRef.current) return;\n    \n    const svg = d3.select(svgRef.current);\n    const container = containerRef.current;\n    const width = container.clientWidth;\n    const height = 150;\n    \n    // –ì—Ä–∞–Ω–∏—á–Ω—ã–µ –¥–∞—Ç—ã\n    const startDate = new Date(1600, 0, 1); // –ù–∞—á–∞–ª–æ —Å –°—Ç—Ä–∞–¥–∏–≤–∞—Ä–∏\n    const endDate = new Date(); // –°–µ–≥–æ–¥–Ω—è\n    \n    // –ú–∞—Å—à—Ç–∞–± –≤—Ä–µ–º–µ–Ω–∏\n    const xScale = d3.scaleTime()\n      .domain([startDate, endDate])\n      .range([50, width - 50]);\n    \n    // –õ–∏–Ω–∏—è —à–∫–∞–ª—ã\n    svg.append('line')\n      .attr('x1', 50)\n      .attr('y1', height / 2)\n      .attr('x2', width - 50)\n      .attr('y2', height / 2)\n      .attr('stroke', '#9ca3af')\n      .attr('stroke-width', 2);\n    \n    // –ú–µ—Ç–∫–∏ –≥–æ–¥–æ–≤\n    const ticks = xScale.ticks(d3.timeYear.every(10));\n    ticks.forEach((date, i) => {\n      const x = xScale(date);\n      \n      // –õ–∏–Ω–∏—è –¥–µ–ª–µ–Ω–∏—è\n      svg.append('line')\n        .attr('x1', x)\n        .attr('y1', height / 2 - 5)\n        .attr('x2', x)\n        .attr('y2', height / 2 + 5)\n        .attr('stroke', '#6b7280')\n        .attr('stroke-width', 1);\n      \n      // –ü–æ–¥–ø–∏—Å—å –≥–æ–¥–∞\n      svg.append('text')\n        .attr('x', x)\n        .attr('y', height / 2 + 20)\n        .attr('text-anchor', 'middle')\n        .attr('font-size', '10px')\n        .attr('fill', '#6b7280')\n        .text(date.getFullYear());\n    });\n    \n    // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤ drag –∏ zoom...\n  }, []);\n  \n  return (\n    <div \n      ref={containerRef} \n      className=\"w-full bg-white border border-gray-200 rounded-lg p-4 shadow-sm relative overflow-hidden\"\n      style={{ cursor: isDragging ? 'grabbing' : 'grab' }}\n    >\n      <svg\n        ref={svgRef}\n        viewBox={`${viewBox.x} ${viewBox.y} ${viewBox.width} ${viewBox.height}`}\n        className=\"w-full h-48 transition-transform duration-100\"\n      >\n        {/* –≠–ª–µ–º–µ–Ω—Ç—ã –±—É–¥—É—Ç –¥–æ–±–∞–≤–ª–µ–Ω—ã —á–µ—Ä–µ–∑ D3 */}\n      </svg>\n      \n      {/* –ö–Ω–æ–ø–∫–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è */}\n      <div className=\"absolute top-2 right-2 flex space-x-2\">\n        <button \n          onClick={() => setViewBox(prev => ({ ...prev, width: prev.width * 0.9 }))}\n          className=\"p-1 bg-gray-100 rounded-full hover:bg-gray-200\"\n          title={t('zoomIn')}\n        >\n          <svg xmlns=\"http://www.w3.org/2000/svg\" width=\"16\" height=\"16\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" strokeWidth=\"2\">\n            <circle cx=\"11\" cy=\"11\" r=\"8\" />\n            <line x1=\"21\" y1=\"21\" x2=\"16.65\" y2=\"16.65\" />\n            <line x1=\"11\" y1=\"8\" x2=\"11\" y2=\"14\" />\n            <line x1=\"8\" y1=\"11\" x2=\"14\" y2=\"11\" />\n          </svg>\n        </button>\n        <button \n          onClick={() => setViewBox(prev => ({ ...prev, width: prev.width * 1.1 }))}\n          className=\"p-1 bg-gray-100 rounded-full hover:bg-gray-200\"\n          title={t('zoomOut')}\n        >\n          <svg xmlns=\"http://www.w3.org/2000/svg\" width=\"16\" height=\"16\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" strokeWidth=\"2\">\n            <circle cx=\"11\" cy=\"11\" r=\"8\" />\n            <line x1=\"21\" y1=\"21\" x2=\"16.65\" y2=\"16.65\" />\n            <line x1=\"11\" y1=\"8\" x2=\"11\" y2=\"14\" />\n          </svg>\n        </button>\n      </div>\n    </div>\n  );\n}\n```\n\n## 2. –°–ò–°–¢–ï–ú–ê –°–í–Ø–ó–ï–ô –ò –ü–û–î–°–í–ï–¢–ö–ò\n- –¶–≤–µ—Ç–æ–≤–∞—è –∫–æ–¥–∏—Ä–æ–≤–∫–∞:\n  | –¢–∏–ø —Å–≤—è–∑–∏ | –¶–≤–µ—Ç | –°–∏–º–≤–æ–ª | –ò–∫–æ–Ω–∫–∞ |\n  |-----------|------|--------|--------|\n  | –£—á–∏—Ç–µ–ª—å/—É—á–µ–Ω–∏–∫ | #2563eb | üë®‚Äçüè´ | –£—á–∏—Ç–µ–ª—å |\n  | –ö–æ–Ω—Ü–µ—Ä—Ç | #8b5cf6 | üéª | –£—á–∞—Å—Ç–Ω–∏–∫–∏ |\n  | –†–æ–¥—Å—Ç–≤–µ–Ω–Ω–∏–∫ | #ef4444 | ‚ù§Ô∏è | –°–µ—Ä–¥—Ü–µ |\n  | –ú–∞—Å—Ç–µ—Ä –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤ | #16a34a | ü™µ | –ò–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç |\n  | –î—Ä—É–∂–±–∞ | #f59e0b | ü§ù | –†—É–∫–æ–ø–æ–∂–∞—Ç–∏–µ |\n\n### –†–µ–∞–ª–∏–∑–∞—Ü–∏—è\n```typescript\n// components/graph/ConnectionGraph.tsx\nimport { useTranslations } from 'next-intl';\nimport { VectorIcon } from '../ui/VectorIcons';\nimport { ConnectionLine } from '../ui/ShapeComponents';\n\nconst CONNECTION_STYLES = {\n  teacher: { color: '#2563eb', icon: 'teacher' },\n  concert: { color: '#8b5cf6', icon: 'concert' },\n  relative: { color: '#ef4444', icon: 'relative' },\n  instrument: { color: '#16a34a', icon: 'instrument' },\n  friend: { color: '#f59e0b', icon: 'friend' }\n};\n\nexport function ConnectionGraph({ data, selectedNodeId }: {  any; selectedNodeId: string | null }) {\n  const t = useTranslations('graph');\n  const [highlightedNodes, setHighlightedNodes] = useState<string[]>([]);\n  \n  const handleNodeClick = (nodeId: string) => {\n    setSelectedNode(nodeId);\n    \n    // –ü–æ–∏—Å–∫ —Å–≤—è–∑–∞–Ω–Ω—ã—Ö —É–∑–ª–æ–≤\n    const relatedNodes = data.connections\n      .filter(conn => conn.source === nodeId || conn.target === nodeId)\n      .map(conn => conn.source === nodeId ? conn.target : conn.source);\n      \n    setHighlightedNodes([...relatedNodes, nodeId]);\n  };\n  \n  return (\n    <div className=\"relative w-full h-[600px] bg-gray-50\">\n      {data.connections.map((conn: any) => (\n        <ConnectionLine\n          key={`${conn.source}-${conn.target}`}\n          start={{ x: getNodeX(conn.source), y: getNodeY(conn.source) }}\n          end={{ x: getNodeX(conn.target), y: getNodeY(conn.target) }}\n          type={conn.type}\n          highlighted={highlightedNodes.includes(conn.source) || highlightedNodes.includes(conn.target)}\n        />\n      ))}\n      \n      {data.people.map((person: any) => (\n        <div \n          key={person.id}\n          className={`absolute transform -translate-x-1/2 -translate-y-1/2 cursor-pointer transition-all duration-300 ${\n            highlightedNodes.includes(person.id) \n              ? 'scale-125 z-10' \n              : 'scale-100 z-0'\n          }`}\n          style={{ \n            left: `${getNodeX(person.id)}px`, \n            top: `${getNodeY(person.id)}px` \n          }}\n          onClick={() => handleNodeClick(person.id)}\n          title={`${person.names.primary} (${t(person.bio.short)})`}\n        >\n          <div className={`w-12 h-12 rounded-full flex items-center justify-center ${\n            selectedNodeId === person.id \n              ? 'bg-blue-500 text-white shadow-lg' \n              : 'bg-white shadow-md'\n          }`}>\n            <VectorIcon type=\"violinist\" size={24} className=\"text-blue-600\" />\n          </div>\n          <div className=\"mt-1 text-xs text-center font-medium\">{person.names.primary}</div>\n        </div>\n      ))}\n    </div>\n  );\n}\n```\n\n## 3. –°–ò–°–¢–ï–ú–ê –ú–£–õ–¨–¢–ò–Ø–ó–´–ß–ù–û–ô –ü–û–î–î–ï–†–ñ–ö–ò\n- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —è–∑—ã–∫–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è\n- –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —è–∑—ã–∫–∞ —á–µ—Ä–µ–∑ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å\n- –ü–æ–¥–¥–µ—Ä–∂–∫–∞ RTL (—Å–ø—Ä–∞–≤–∞-–Ω–∞–ª–µ–≤–æ) —è–∑—ã–∫–æ–≤\n- –ò–Ω—Ç–µ—Ä–Ω–∞—Ü–∏–æ–Ω–∞–ª–∏–∑–∞—Ü–∏—è –¥–∞—Ç, –≤–∞–ª—é—Ç –∏ —Ñ–æ—Ä–º–∞—Ç–æ–≤\n- –õ–æ–∫–∞–ª–∏–∑–∞—Ü–∏—è –∫–æ–Ω—Ç–µ–Ω—Ç–∞ –¥–ª—è —Ä–∞–∑–Ω—ã—Ö –∫—É–ª—å—Ç—É—Ä\n\n### –†–µ–∞–ª–∏–∑–∞—Ü–∏—è –ª–æ–∫–∞–ª–∏–∑–∞—Ü–∏–∏\n```typescript\n// lib/i18n.ts\nimport { getRequestConfig } from 'next-intl/server';\nimport { notFound } from 'next/navigation';\n\n// –°–ø–∏—Å–æ–∫ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º—ã—Ö —è–∑—ã–∫–æ–≤\nexport const locales = ['ru', 'en', 'de', 'fr', 'es', 'zh', 'ja', 'ar'];\nexport const defaultLocale = 'ru';\n\n// –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π –¥–ª—è —É–∫–∞–∑–∞–Ω–Ω–æ–≥–æ —è–∑—ã–∫–∞\nexport default getRequestConfig(async ({ locale }) => {\n  // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º–æ–≥–æ —è–∑—ã–∫–∞\n  if (!locales.includes(locale as any)) notFound();\n  \n  // –î–∏–Ω–∞–º–∏—á–µ—Å–∫–∞—è –∑–∞–≥—Ä—É–∑–∫–∞ –ø–µ—Ä–µ–≤–æ–¥–æ–≤\n  return {\n    messages: (await import(`../data/locales/${locale}.json`)).default\n  };\n});\n\n// –•—É–∫ –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –ø–µ—Ä–µ–≤–æ–¥–æ–≤ –≤ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∞—Ö\nexport function useTranslation() {\n  const { messages } = useRequestContext();\n  return (key: string, params?: Record<string, string | number>) => {\n    let value = messages[key] || key;\n    \n    // –ü–æ–¥—Å—Ç–∞–Ω–æ–≤–∫–∞ –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤\n    if (params) {\n      Object.entries(params).forEach(([key, value]) => {\n        value = value.replace(`{${key}}`, String(value));\n      });\n    }\n    \n    return value;\n  };\n}\n\n// –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —è–∑—ã–∫–∞\nexport function detectLanguage(headers: Headers): string {\n  const acceptLanguage = headers.get('accept-language');\n  if (!acceptLanguage) return defaultLocale;\n  \n  // –ò–∑–≤–ª–µ—á–µ–Ω–∏–µ –∫–æ–¥–∞ —è–∑—ã–∫–∞ –∏–∑ –∑–∞–≥–æ–ª–æ–≤–∫–∞\n  const langCode = acceptLanguage.split(',')[0].split('-')[0].toLowerCase();\n  \n  // –°–æ–ø–æ—Å—Ç–∞–≤–ª–µ–Ω–∏–µ —Å –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º—ã–º–∏ —è–∑—ã–∫–∞–º–∏\n  const languageMap: Record<string, string> = {\n    'ru': 'ru',\n    'en': 'en',\n    'de': 'de',\n    'fr': 'fr',\n    'es': 'es',\n    'zh': 'zh',\n    'ja': 'ja',\n    'ar': 'ar',\n    'uk': 'ru',  // –£–∫—Ä–∞–∏–Ω—Å–∫–∏–π ‚Üí –†—É—Å—Å–∫–∏–π\n    'be': 'ru',  // –ë–µ–ª–æ—Ä—É—Å—Å–∫–∏–π ‚Üí –†—É—Å—Å–∫–∏–π\n    'kk': 'ru'   // –ö–∞–∑–∞—Ö—Å–∫–∏–π ‚Üí –†—É—Å—Å–∫–∏–π\n  };\n  \n  return languageMap[langCode] || defaultLocale;\n}\n```\n\n### –§–∞–π–ª—ã –ª–æ–∫–∞–ª–∏–∑–∞—Ü–∏–∏\n```json\n// data/locales/ru.json\n{\n  \"common\": {\n    \"appName\": \"–ú—É–∑—ã–∫–∞–ª—å–Ω—ã–µ –°–≤—è–∑–∏\",\n    \"search\": \"–ü–æ–∏—Å–∫...\",\n    \"loading\": \"–ó–∞–≥—Ä—É–∑–∫–∞...\",\n    \"error\": \"–û—à–∏–±–∫–∞\",\n    \"close\": \"–ó–∞–∫—Ä—ã—Ç—å\"\n  },\n  \"timeline\": {\n    \"zoomIn\": \"–ü—Ä–∏–±–ª–∏–∑–∏—Ç—å\",\n    \"zoomOut\": \"–û—Ç–¥–∞–ª–∏—Ç—å\",\n    \"randomPeople\": \"–°–ª—É—á–∞–π–Ω—ã–µ –ø–µ—Ä—Å–æ–Ω—ã\",\n    \"startDate\": \"–ù–∞—á–∞–ª—å–Ω–∞—è –¥–∞—Ç–∞\",\n    \"endDate\": \"–ö–æ–Ω–µ—á–Ω–∞—è –¥–∞—Ç–∞\"\n  },\n  \"graph\": {\n    \"teacher\": \"–£—á–∏—Ç–µ–ª—å\",\n    \"student\": \"–£—á–µ–Ω–∏–∫\",\n    \"concert\": \"–ö–æ–Ω—Ü–µ—Ä—Ç\",\n    \"relative\": \"–†–æ–¥—Å—Ç–≤–µ–Ω–Ω–∏–∫\",\n    \"instrument\": \"–ò–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç\",\n    \"friend\": \"–î—Ä—É–≥\",\n    \"selectPerson\": \"–í—ã–±–µ—Ä–∏—Ç–µ –ø–µ—Ä—Å–æ–Ω—É –¥–ª—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞ —Å–≤—è–∑–µ–π\"\n  },\n  \"admin\": {\n    \"dashboard\": \"–ü–∞–Ω–µ–ª—å —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è\",\n    \"recommendations\": \"–†–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–∏ –ò–ò\",\n    \"dataEditor\": \"–†–µ–¥–∞–∫—Ç–æ—Ä –¥–∞–Ω–Ω—ã—Ö\",\n    \"backup\": \"–†–µ–∑–µ—Ä–≤–Ω–æ–µ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ\",\n    \"statistics\": \"–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞\"\n  },\n  \"person\": {\n    \"birth\": \"–†–æ–∂–¥–µ–Ω–∏–µ\",\n    \"death\": \"–°–º–µ—Ä—Ç—å\",\n    \"bio\": \"–ë–∏–æ–≥—Ä–∞—Ñ–∏—è\",\n    \"connections\": \"–°–≤—è–∑–∏\",\n    \"events\": \"–°–æ–±—ã—Ç–∏—è\",\n    \"instruments\": \"–ò–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã\"\n  },\n  \"event\": {\n    \"date\": \"–î–∞—Ç–∞\",\n    \"location\": \"–ú–µ—Å—Ç–æ –ø—Ä–æ–≤–µ–¥–µ–Ω–∏—è\",\n    \"participants\": \"–£—á–∞—Å—Ç–Ω–∏–∫–∏\",\n    \"description\": \"–û–ø–∏—Å–∞–Ω–∏–µ\",\n    \"media\": \"–ú–µ–¥–∏–∞\"\n  }\n}\n```\n\n```json\n// data/locales/en.json\n{\n  \"common\": {\n    \"appName\": \"Music Connections\",\n    \"search\": \"Search...\",\n    \"loading\": \"Loading...\",\n    \"error\": \"Error\",\n    \"close\": \"Close\"\n  },\n  \"timeline\": {\n    \"zoomIn\": \"Zoom in\",\n    \"zoomOut\": \"Zoom out\",\n    \"randomPeople\": \"Random people\",\n    \"startDate\": \"Start date\",\n    \"endDate\": \"End date\"\n  },\n  \"graph\": {\n    \"teacher\": \"Teacher\",\n    \"student\": \"Student\",\n    \"concert\": \"Concert\",\n    \"relative\": \"Relative\",\n    \"instrument\": \"Instrument\",\n    \"friend\": \"Friend\",\n    \"selectPerson\": \"Select a person to view connections\"\n  },\n  \"admin\": {\n    \"dashboard\": \"Dashboard\",\n    \"recommendations\": \"AI Recommendations\",\n    \"dataEditor\": \"Data Editor\",\n    \"backup\": \"Backup\",\n    \"statistics\": \"Statistics\"\n  },\n  \"person\": {\n    \"birth\": \"Birth\",\n    \"death\": \"Death\",\n    \"bio\": \"Biography\",\n    \"connections\": \"Connections\",\n    \"events\": \"Events\",\n    \"instruments\": \"Instruments\"\n  },\n  \"event\": {\n    \"date\": \"Date\",\n    \"location\": \"Location\",\n    \"participants\": \"Participants\",\n    \"description\": \"Description\",\n    \"media\": \"Media\"\n  }\n}\n```\n\n```json\n// data/locales/ar.json\n{\n  \"common\": {\n    \"appName\": \"ÿßŸÑÿ±Ÿàÿßÿ®ÿ∑ ÿßŸÑŸÖŸàÿ≥ŸäŸÇŸäÿ©\",\n    \"search\": \"ÿ®ÿ≠ÿ´...\",\n    \"loading\": \"ÿ¨ÿßÿ±Ÿä ÿßŸÑÿ™ÿ≠ŸÖŸäŸÑ...\",\n    \"error\": \"ÿÆÿ∑ÿ£\",\n    \"close\": \"ÿ•ÿ∫ŸÑÿßŸÇ\"\n  },\n  \"timeline\": {\n    \"zoomIn\": \"ÿ™ŸÇÿ±Ÿäÿ®\",\n    \"zoomOut\": \"ÿ™ÿ®ÿßÿπÿØ\",\n    \"randomPeople\": \"ÿ£ÿ¥ÿÆÿßÿµ ÿπÿ¥Ÿàÿßÿ¶ŸäŸàŸÜ\",\n    \"startDate\": \"ÿ™ÿßÿ±ŸäÿÆ ÿßŸÑÿ®ÿØÿ°\",\n    \"endDate\": \"ÿ™ÿßÿ±ŸäÿÆ ÿßŸÑÿßŸÜÿ™Ÿáÿßÿ°\"\n  },\n  \"graph\": {\n    \"teacher\": \"ŸÖÿπŸÑŸÖ\",\n    \"student\": \"ÿ∑ÿßŸÑÿ®\",\n    \"concert\": \"ÿ≠ŸÅŸÑÿ© ŸÖŸàÿ≥ŸäŸÇŸäÿ©\",\n    \"relative\": \"ŸÇÿ±Ÿäÿ®\",\n    \"instrument\": \"ÿ¢ŸÑÿ© ŸÖŸàÿ≥ŸäŸÇŸäÿ©\",\n    \"friend\": \"ÿµÿØŸäŸÇ\",\n    \"selectPerson\": \"ÿ≠ÿØÿØ ÿ¥ÿÆÿµŸãÿß ŸÑÿπÿ±ÿ∂ ÿßŸÑÿ±Ÿàÿßÿ®ÿ∑\"\n  },\n  \"admin\": {\n    \"dashboard\": \"ŸÑŸàÿ≠ÿ© ÿßŸÑÿ™ÿ≠ŸÉŸÖ\",\n    \"recommendations\": \"ÿ™ŸàÿµŸäÿßÿ™ ÿßŸÑÿ∞ŸÉÿßÿ° ÿßŸÑÿßÿµÿ∑ŸÜÿßÿπŸä\",\n    \"dataEditor\": \"ŸÖÿ≠ÿ±ÿ± ÿßŸÑÿ®ŸäÿßŸÜÿßÿ™\",\n    \"backup\": \"ŸÜÿ≥ÿÆ ÿßÿ≠ÿ™Ÿäÿßÿ∑Ÿä\",\n    \"statistics\": \"ÿ•ÿ≠ÿµÿßÿ¶Ÿäÿßÿ™\"\n  },\n  \"person\": {\n    \"birth\": \"ŸÖŸäŸÑÿßÿØ\",\n    \"death\": \"ŸàŸÅÿßÿ©\",\n    \"bio\": \"ÿ≥Ÿäÿ±ÿ© ÿ∞ÿßÿ™Ÿäÿ©\",\n    \"connections\": \"ÿ±Ÿàÿßÿ®ÿ∑\",\n    \"events\": \"ÿ£ÿ≠ÿØÿßÿ´\",\n    \"instruments\": \"ÿßŸÑÿ¢ŸÑÿßÿ™ ÿßŸÑŸÖŸàÿ≥ŸäŸÇŸäÿ©\"\n  },\n  \"event\": {\n    \"date\": \"ÿ™ÿßÿ±ŸäÿÆ\",\n    \"location\": \"ÿßŸÑŸÖŸàŸÇÿπ\",\n    \"participants\": \"ÿßŸÑŸÖÿ¥ÿßÿ±ŸÉŸàŸÜ\",\n    \"description\": \"ŸàÿµŸÅ\",\n    \"media\": \"ÿßŸÑŸàÿ≥ÿßÿ¶ÿ∑\"\n  }\n}\n```\n\n### –ö–æ–º–ø–æ–Ω–µ–Ω—Ç –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è —è–∑—ã–∫–∞\n```tsx\n// components/ui/LanguageSwitcher.tsx\n'use client';\n\nimport { useState, useEffect } from 'react';\nimport { useRouter } from 'next/navigation';\nimport { useLocale, useTranslations } from 'next-intl';\nimport { locales } from '@/lib/i18n';\n\nexport default function LanguageSwitcher() {\n  const t = useTranslations('common');\n  const router = useRouter();\n  const currentLocale = useLocale();\n  const [isOpen, setIsOpen] = useState(false);\n  \n  // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∞\n  useEffect(() => {\n    const handleClick = (e: MouseEvent) => {\n      if (!(e.target as HTMLElement).closest('.language-switcher')) {\n        setIsOpen(false);\n      }\n    };\n    \n    document.addEventListener('click', handleClick);\n    return () => document.removeEventListener('click', handleClick);\n  }, []);\n  \n  const changeLanguage = (newLocale: string) => {\n    // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ —è–∑—ã–∫–∞ –≤ localStorage\n    localStorage.setItem('preferredLanguage', newLocale);\n    \n    // –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —Å —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ–º –ø—É—Ç–∏\n    const currentPath = window.location.pathname.replace(`/${currentLocale}`, '');\n    router.push(`/${newLocale}${currentPath}`);\n    \n    setIsOpen(false);\n  };\n  \n  return (\n    <div className=\"language-switcher relative inline-block\">\n      <button\n        onClick={() => setIsOpen(!isOpen)}\n        className=\"flex items-center space-x-2 p-2 rounded-lg hover:bg-gray-100\"\n        aria-label={t('languageSwitcher')}\n      >\n        <span className=\"font-medium\">\n          {currentLocale === 'ru' ? 'üá∑üá∫ RU' : \n           currentLocale === 'en' ? 'üá∫üá∏ EN' : \n           currentLocale === 'de' ? 'üá©üá™ DE' : \n           currentLocale === 'fr' ? 'üá´üá∑ FR' : \n           currentLocale === 'ar' ? 'üá∏üá¶ AR' : \n           currentLocale.toUpperCase()}\n        </span>\n        <svg xmlns=\"http://www.w3.org/2000/svg\" className=\"h-4 w-4\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n          <path strokeLinecap=\"round\" strokeLinejoin=\"round\" strokeWidth={2} d=\"M19 9l-7 7-7-7\" />\n        </svg>\n      </button>\n      \n      {isOpen && (\n        <div className=\"absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50\">\n          <div className=\"py-1\">\n            {locales.map((locale) => (\n              <button\n                key={locale}\n                onClick={() => changeLanguage(locale)}\n                className={`w-full text-left px-4 py-2 text-sm ${\n                  currentLocale === locale\n                    ? 'bg-blue-50 text-blue-700'\n                    : 'text-gray-700 hover:bg-gray-100'\n                }`}\n              >\n                {locale === 'ru' && 'üá∑üá∫ –†—É—Å—Å–∫–∏–π'}\n                {locale === 'en' && 'üá∫üá∏ English'}\n                {locale === 'de' && 'üá©üá™ Deutsch'}\n                {locale === 'fr' && 'üá´üá∑ Fran√ßais'}\n                {locale === 'es' && 'üá™üá∏ Espa√±ol'}\n                {locale === 'zh' && 'üá®üá≥ ‰∏≠Êñá'}\n                {locale === 'ja' && 'üáØüáµ Êó•Êú¨Ë™û'}\n                {locale === 'ar' && 'üá∏üá¶ ÿßŸÑÿπÿ±ÿ®Ÿäÿ©'}\n              </button>\n            ))}\n          </div>\n        </div>\n      )}\n    </div>\n  );\n}\n```\n\n## 4. –ê–î–ú–ò–ù-–ü–ê–ù–ï–õ–¨ –° –ò–ù–¢–ï–ì–†–ê–¶–ò–ï–ô YANDEX GPT\n- –ê—É—Ç–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ü–∏—è —á–µ—Ä–µ–∑ GitHub OAuth\n- –ü–∞–Ω–µ–ª—å —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–π –ò–ò —Å –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–º–∏ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è–º–∏\n- –†–µ–¥–∞–∫—Ç–æ—Ä –¥–∞–Ω–Ω—ã—Ö —Å –≤–∞–ª–∏–¥–∞—Ü–∏–µ–π\n- –õ–æ–≥–∏ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏\n- –ò–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ –ø–æ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –∫–æ–¥–∞ –¥–ª—è –Ω–µ–π—Ä–æ—Å–µ—Ç–µ–π\n\n### –†–µ–∞–ª–∏–∑–∞—Ü–∏—è API —ç–Ω–¥–ø–æ–∏–Ω—Ç–∞\n```typescript\n// app/api/ai-analysis/route.ts\nimport { NextResponse } from 'next/server';\nimport { withAdminProtection } from '@/lib/security';\nimport { getAIRecommendations } from '@/lib/ai-analysis';\nimport { t } from '@/lib/i18n';\n\nexport const POST = withAdminProtection(async (req: Request, res: NextResponse, user: any) => {\n  try {\n    const { data, locale } = await req.json();\n    \n    // –û–≥—Ä–∞–Ω–∏—á–µ–Ω–∏–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ –∑–∞–ø—Ä–æ—Å–æ–≤\n    const rateLimitKey = `ai_requests:${user.githubId}:${Math.floor(Date.now() / 60000)}`;\n    const currentRequests = await getRateLimitCount(rateLimitKey);\n    \n    if (currentRequests >= 10) { // 10 –∑–∞–ø—Ä–æ—Å–æ–≤ –≤ –º–∏–Ω—É—Ç—É\n      return NextResponse.json(\n        { \n          error: t('admin.tooManyRequests', locale),\n          retry_after: 60 - (Date.now() % 60000) / 1000 \n        }, \n        { status: 429 }\n      );\n    }\n    \n    await incrementRateLimit(rateLimitKey);\n    \n    // –ü–æ–ª—É—á–µ–Ω–∏–µ —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–π –æ—Ç –ò–ò\n    const recommendations = await getAIRecommendations(data, locale);\n    \n    // –õ–æ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏\n    logActivity('ai_analysis', { \n      userId: user.githubId, \n      itemsAnalyzed: data.people.length, \n      recommendations: recommendations.new_events.length,\n      locale\n    });\n    \n    return NextResponse.json(recommendations);\n    \n  } catch (error) {\n    console.error('AI API Error:', error);\n    logError('ai_analysis', error);\n    return NextResponse.json({ error: t('admin.aiFailed', locale) }, { status: 500 });\n  }\n});\n```\n\n## 5. –°–ò–°–¢–ï–ú–ê –û–ë–†–ê–¢–ù–û–ô –°–í–Ø–ó–ò –ß–ï–†–ï–ó TELEGRAM\n- –î–≤—É—Å—Ç–æ—Ä–æ–Ω–Ω—è—è —Å–≤—è–∑—å —Å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º–∏\n- –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ –ø–æ email –ø—Ä–∏ –∑–∞–ø—Ä–æ—Å–µ\n- –õ–æ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏–π\n- –û—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏–µ –æ—Ç–≤–µ—Ç–æ–≤\n\n### –†–µ–∞–ª–∏–∑–∞—Ü–∏—è\n```typescript\n// lib/telegram.ts\nexport async function sendTelegramMessage(text: string, locale: string) {\n  const botToken = process.env.TELEGRAM_BOT_TOKEN!;\n  const chatId = process.env.TELEGRAM_CHAT_ID!;\n  \n  // –õ–æ–∫–∞–ª–∏–∑–∞—Ü–∏—è —Å–æ–æ–±—â–µ–Ω–∏—è\n  const localizedText = locale === 'ru' \n    ? `üîî –ù–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–±—Ä–∞—Ç–Ω–æ–π —Å–≤—è–∑–∏\\n\\n${text}`\n    : `üîî New feedback message\\n\\n${text}`;\n  \n  const response = await fetch(\n    `https://api.telegram.org/bot${botToken}/sendMessage`,\n    {\n      method: 'POST',\n      headers: { 'Content-Type': 'application/json' },\n      body: JSON.stringify({ \n        chat_id: chatId, \n        text: localizedText, \n        parse_mode: 'HTML',\n        disable_web_page_preview: true\n      }),\n    }\n  );\n  \n  if (!response.ok) {\n    const errorData = await response.json();\n    throw new Error(`Telegram API error: ${errorData.description}`);\n  }\n  \n  return response.json();\n}\n\n// app/api/feedback/route.ts\nexport async function POST(request: NextRequest) {\n  try {\n    const { name, email, message, contactMethod, locale } = await request.json();\n    \n    // –í–∞–ª–∏–¥–∞—Ü–∏—è\n    if (!name || !message) {\n      return NextResponse.json(\n        { error: t('feedback.requiredFields', locale) }, \n        { status: 400 }\n      );\n    }\n    \n    // –û—Ç–ø—Ä–∞–≤–∫–∞ –≤ Telegram\n    const telegramMessage = `\nüë§ ${t('feedback.name', locale)}: ${name}\nüìß ${t('feedback.email', locale)}: ${email || t('feedback.notProvided', locale)}\nüì± ${t('feedback.contactMethod', locale)}: ${contactMethod || t('feedback.notSpecified', locale)}\n      \nüí¨ ${t('feedback.message', locale)}:\n${message}\n    `;\n    \n    await sendTelegramMessage(telegramMessage, locale);\n    \n    // –û—Ç–ø—Ä–∞–≤–∫–∞ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è\n    if (contactMethod === 'email' && email) {\n      await sendEmailConfirmation(email, name, locale);\n    } else if (contactMethod === 'telegram') {\n      await sendTelegramConfirmation(name, locale);\n    }\n    \n    return NextResponse.json({ \n      success: true,\n      message: t('feedback.success', locale)\n    });\n  } catch (error) {\n    console.error('Feedback error:', error);\n    return NextResponse.json(\n      { error: t('feedback.failed', locale) }, \n      { status: 500 }\n    );\n  }\n}\n```\n\n## 6. –§–£–ù–ö–¶–ò–Ø –≠–ö–°–ü–û–†–¢–ê –í PDF\n- –≠–∫—Å–ø–æ—Ä—Ç –∂–∏–∑–Ω–µ–Ω–Ω—ã—Ö –ø—É—Ç–µ–π –≤ –ø—Ä–æ—Ñ–µ—Å—Å–∏–æ–Ω–∞–ª—å–Ω—ã–π PDF\n- –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏–µ —Å—Ç–∏–ª–∏ –∏ –±—Ä–µ–Ω–¥–∏–Ω–≥\n- –ü—Ä–∞–≤–∏–ª—å–Ω–∞—è –ø–∞–≥–∏–Ω–∞—Ü–∏—è –∏ –∫–æ–ª–æ–Ω—Ç–∏—Ç—É–ª—ã\n- –ü–æ–¥–¥–µ—Ä–∂–∫–∞ –Ω–µ—Å–∫–æ–ª—å–∫–∏—Ö —è–∑—ã–∫–æ–≤\n\n### –†–µ–∞–ª–∏–∑–∞—Ü–∏—è\n```typescript\n// lib/pdf-export.ts\nimport { PDFDocument, StandardFonts, rgb } from 'pdf-lib';\nimport fontkit from '@pdf-lib/fontkit';\nimport { t } from './i18n';\n\nexport async function exportLifeLinesToPDF(people: any[], events: any[], locale: string) {\n  const pdfDoc = await PDFDocument.create();\n  pdfDoc.registerFontkit(fontkit);\n  \n  // –ó–∞–≥—Ä—É–∑–∫–∞ —à—Ä–∏—Ñ—Ç–æ–≤ –¥–ª—è —Ä–∞–∑–Ω—ã—Ö —è–∑—ã–∫–æ–≤\n  let fontBytes;\n  if (locale === 'zh' || locale === 'ja') {\n    fontBytes = await fetch('/fonts/NotoSansSC-Regular.otf').then(res => res.arrayBuffer());\n  } else if (locale === 'ar') {\n    fontBytes = await fetch('/fonts/Amiri-Regular.ttf').then(res => res.arrayBuffer());\n  } else {\n    fontBytes = await fetch('/fonts/Roboto-Regular.ttf').then(res => res.arrayBuffer());\n  }\n  \n  const customFont = await pdfDoc.embedFont(fontBytes);\n  \n  const page = pdfDoc.addPage();\n  const { width, height } = page.getSize();\n  \n  // –ó–∞–≥–æ–ª–æ–≤–æ–∫\n  page.drawText(t('pdf.title', locale), {\n    x: 50,\n    y: height - 50,\n    size: 24,\n    font: customFont,\n    color: rgb(0.1, 0.1, 0.1),\n  });\n  \n  // –û—Å–Ω–æ–≤–Ω–æ–µ —Å–æ–¥–µ—Ä–∂–∏–º–æ–µ\n  let yPos = height - 100;\n  for (const person of people) {\n    // –ò–º—è –ø–µ—Ä—Å–æ–Ω—ã –∏ –ø–µ—Ä–∏–æ–¥ –∂–∏–∑–Ω–∏\n    page.drawText(`${person.names.primary} (${person.birth.display} - ${person.death?.display || t('pdf.present', locale)})`, {\n      x: 50,\n      y: yPos,\n      size: 16,\n      font: customFont,\n      color: rgb(0.2, 0.4, 0.8),\n    });\n    \n    yPos -= 25;\n    \n    // –°–æ–±—ã—Ç–∏—è\n    for (const eventId of person.events) {\n      const event = events.find(e => e.id === eventId);\n      if (event) {\n        page.drawText(`‚Ä¢ ${event.date.display}: ${event.title.primary}`, {\n          x: 70,\n          y: yPos,\n          size: 12,\n          font: customFont,\n          color: rgb(0.3, 0.3, 0.3),\n        });\n        yPos -= 20;\n      }\n    }\n    \n    yPos -= 10;\n    \n    // –ü–µ—Ä–µ—Ö–æ–¥ –Ω–∞ –Ω–æ–≤—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É –ø—Ä–∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç–∏\n    if (yPos < 100) {\n      page.drawText(t('pdf.page', locale) + ' ' + pdfDoc.getPages().length, {\n        x: width - 60,\n        y: 30,\n        size: 10,\n        font: customFont,\n        color: rgb(0.6, 0.6, 0.6),\n      });\n      \n      page = pdfDoc.addPage();\n      yPos = height - 70;\n    }\n  }\n  \n  // –§—É—Ç–µ—Ä –Ω–∞ –ø–æ—Å–ª–µ–¥–Ω–µ–π —Å—Ç—Ä–∞–Ω–∏—Ü–µ\n  page.drawText(t('pdf.exported', locale) + ': ' + new Date().toLocaleDateString(locale), {\n    x: 50,\n    y: 30,\n    size: 10,\n    font: customFont,\n    color: rgb(0.6, 0.6, 0.6),\n  });\n  page.drawText(t('pdf.page', locale) + ' ' + pdfDoc.getPages().length, {\n    x: width - 60,\n    y: 30,\n    size: 10,\n    font: customFont,\n    color: rgb(0.6, 0.6, 0.6),\n  });\n  \n  return await pdfDoc.save();\n}\n```\n\n## 7. –ò–ù–¢–ï–ì–†–ê–¶–ò–Ø YANDEX.–î–û–ù–ê–¢\n- –ü–ª–∞–≤–∞—é—â–∞—è –∫–Ω–æ–ø–∫–∞ –ø–æ–∂–µ—Ä—Ç–≤–æ–≤–∞–Ω–∏—è\n- –ù–µ—Å–∫–æ–ª—å–∫–æ –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤ —Å—É–º–º\n- –û—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏–µ –≤ –∞–Ω–∞–ª–∏—Ç–∏–∫–µ\n- –ê–¥–∞–ø—Ç–∏–≤–Ω—ã–π –¥–∏–∑–∞–π–Ω –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤\n\n### –†–µ–∞–ª–∏–∑–∞—Ü–∏—è\n```tsx\n// components/DonationButton.tsx\n'use client';\n\nimport { useState, useEffect } from 'react';\nimport { useTranslations } from 'next-intl';\n\nexport default function DonationButton() {\n  const t = useTranslations('donate');\n  const [donationAmount, setDonationAmount] = useState(300);\n  const [isProcessing, setIsProcessing] = useState(false);\n  const [isMobile, setIsMobile] = useState(false);\n  \n  useEffect(() => {\n    const checkMobile = () => {\n      setIsMobile(window.innerWidth < 768);\n    };\n    \n    checkMobile();\n    window.addEventListener('resize', checkMobile);\n    return () => window.removeEventListener('resize', checkMobile);\n  }, []);\n  \n  const handleDonate = () => {\n    if (isProcessing) return;\n    \n    setIsProcessing(true);\n    \n    // URL –¥–ª—è Yandex.–î–æ–Ω–∞—Ç–∞\n    const donationUrl = `https://yoomoney.ru/quickpay/shop-widget?writer=seller&targets=${encodeURIComponent(t('projectSupport'))}&default-sum=${donationAmount}&button-text=01&account=410011234567890&currency=1&paymentType=AC`;\n    \n    // –û—Ç–∫—Ä—ã—Ç–∏–µ –≤ –Ω–æ–≤–æ–º –æ–∫–Ω–µ\n    window.open(donationUrl, '_blank');\n    \n    // –ê–Ω–∞–ª–∏—Ç–∏–∫–∞\n    if (window.plausible) {\n      window.plausible('DonationStarted', { props: { amount: donationAmount, currency: 'RUB' } });\n    }\n    \n    setIsProcessing(false);\n  };\n  \n  return (\n    <div className={`fixed ${isMobile ? 'bottom-4 left-1/2 transform -translate-x-1/2' : 'bottom-4 right-4'} z-50`}>\n      <div className=\"bg-white rounded-xl shadow-lg p-4 border border-gray-200 max-w-xs\">\n        <div className=\"flex items-center justify-between mb-3\">\n          <div className=\"flex items-center space-x-2\">\n            <div className=\"bg-yellow-100 p-2 rounded-full\">\n              <svg xmlns=\"http://www.w3.org/2000/svg\" width=\"24\" height=\"24\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" strokeWidth=\"2\">\n                <path strokeLinecap=\"round\" strokeLinejoin=\"round\" d=\"M12 6v6m0 0v6m0-6h6m-6 0H6\" />\n              </svg>\n            </div>\n            <div>\n              <div className=\"font-bold text-gray-900\">{t('supportProject')}</div>\n              <div className=\"text-sm text-gray-500\">{t('helpDevelopment')}</div>\n            </div>\n          </div>\n          <button \n            onClick={() => setDonationAmount(donationAmount === 300 ? 500 : 300)}\n            className=\"text-sm font-medium text-blue-600 hover:text-blue-800\"\n          >\n            {donationAmount === 300 ? '500 ‚ÇΩ' : '300 ‚ÇΩ'}\n          </button>\n        </div>\n        \n        <button\n          onClick={handleDonate}\n          disabled={isProcessing}\n          className={`w-full py-3 px-4 rounded-lg font-medium text-white transition-colors ${\n            isProcessing \n              ? 'bg-gray-400 cursor-not-allowed' \n              : 'bg-gradient-to-r from-yellow-400 to-yellow-600 hover:from-yellow-500 hover:to-yellow-700'\n          }`}\n        >\n          {isProcessing ? (\n            <div className=\"flex items-center justify-center\">\n              <div className=\"animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2\"></div>\n              {t('processing')}\n            </div>\n          ) : (\n            `${t('support')} ${donationAmount} ‚ÇΩ`\n          )}\n        </button>\n        \n        <div className=\"mt-3 text-xs text-gray-500 text-center\">\n          {t('fundsUsage')}\n        </div>\n      </div>\n    </div>\n  );\n}\n```\n\n## 8. –†–ï–ó–ï–†–í–ù–û–ï –ö–û–ü–ò–†–û–í–ê–ù–ò–ï –ù–ê –Ø–ù–î–ï–ö–°.–î–ò–°–ö\n- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –µ–∂–µ–¥–Ω–µ–≤–Ω–æ–µ —Ä–µ–∑–µ—Ä–≤–Ω–æ–µ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ\n- –®–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ –∞—Ä—Ö–∏–≤–æ–≤\n- –ü–æ–ª–∏—Ç–∏–∫–∞ —Ö—Ä–∞–Ω–µ–Ω–∏—è (7 –¥–Ω–µ–π)\n- –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è –ø—Ä–∏ –æ—à–∏–±–∫–∞—Ö\n- –í–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å —Ä—É—á–Ω–æ–≥–æ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è\n\n### GitHub Actions Workflow\n```yaml\n# .github/workflows/backup-to-yandex.yml\nname: –†–µ–∑–µ—Ä–≤–Ω–æ–µ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –Ω–∞ –Ø–Ω–¥–µ–∫—Å.–î–∏—Å–∫\n\non:\n  schedule:\n    - cron: '0 3 * * *'  # –ï–∂–µ–¥–Ω–µ–≤–Ω–æ –≤ 3:00 UTC\n  workflow_dispatch:\n\njobs:\n  backup:\n    runs-on: ubuntu-latest\n    env:\n      YANDEX_DISK_USERNAME: ${{ secrets.YANDEX_DISK_USERNAME }}\n      YANDEX_DISK_APP_PASSWORD: ${{ secrets.YANDEX_DISK_APP_PASSWORD }}\n      \n    steps:\n      - name: –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏—è\n        uses: actions/checkout@v4\n        \n      - name: –°–æ–∑–¥–∞–Ω–∏–µ –∞—Ä—Ö–∏–≤–∞\n        run: |\n          TIMESTAMP=$(date -u +\"%Y%m%d_%H%M%S\")\n          BACKUP_FILE=\"music-connections-backup-${TIMESTAMP}.tar.gz\"\n          \n          tar -czf $BACKUP_FILE \\\n            --exclude='.git' \\\n            --exclude='node_modules' \\\n            --exclude='*.env*' \\\n            --exclude='logs' \\\n            data/ \\\n            scripts/ \\\n            package.json \\\n            .github/workflows/\n          \n          echo \"BACKUP_FILE=$BACKUP_FILE\" >> $GITHUB_ENV\n          echo \"‚úÖ –ê—Ä—Ö–∏–≤ —Å–æ–∑–¥–∞–Ω: $BACKUP_FILE ($(du -h $BACKUP_FILE | cut -f1))\"\n      \n      - name: –®–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ –∞—Ä—Ö–∏–≤–∞\n        run: |\n          # –ì–µ–Ω–µ—Ä–∞—Ü–∏—è —Å–ª—É—á–∞–π–Ω–æ–≥–æ –ø–∞—Ä–æ–ª—è\n          ARCHIVE_PASSWORD=$(openssl rand -base64 32)\n          echo \"ARCHIVE_PASSWORD=$ARCHIVE_PASSWORD\" >> $GITHUB_ENV\n          \n          # –®–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ\n          7z a -t7z -mhe=on -p\"$ARCHIVE_PASSWORD\" \"${{ env.BACKUP_FILE }}.7z\" \"${{ env.BACKUP_FILE }}\"\n          \n          # –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –ø–∞—Ä–æ–ª—è\n          echo \"$ARCHIVE_PASSWORD\" | gpg --encrypt --recipient YOUR_GPG_KEY_ID -o password.gpg\n          \n          # –£–¥–∞–ª–µ–Ω–∏–µ –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω–æ–≥–æ —Ñ–∞–π–ª–∞\n          rm \"${{ env.BACKUP_FILE }}\"\n      \n      - name: –ó–∞–≥—Ä—É–∑–∫–∞ –Ω–∞ –Ø–Ω–¥–µ–∫—Å.–î–∏—Å–∫\n        run: |\n          # –£—Å—Ç–∞–Ω–æ–≤–∫–∞ cadaver –¥–ª—è WebDAV\n          sudo apt-get update\n          sudo apt-get install -y cadaver curl jq\n      \n          # –ó–∞–≥—Ä—É–∑–∫–∞ –∑–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω–æ–≥–æ —Ñ–∞–π–ª–∞\n          cadaver -t https://webdav.yandex.ru << EOF\n          cd /music-connections-backups\n          put ${{ env.BACKUP_FILE }}.7z\n          put password.gpg\n          ls -la\n          quit\n          EOF\n          \n          if [ $? -ne 0 ]; then\n            echo \"::error::–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏\"\n            exit